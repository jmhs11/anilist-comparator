{
	"name": "anilist-comparator",
	"private": true,
	"version": "1.0.0",
	"type": "commonjs",
	"description": "UNOFFICIAL AniList app for comparing anime and manga lists, including filters, sorting",
	"keywords": [
		"anilist",
		"anime",
		"manga",
		"diff"
	],
	"author": {
		"name": "Kuuro",
		"email": "contact@kuuro.dev",
		"url": "https://kuuro.dev"
	},
	"homepage": "https://anilist-comparator.kuuro.dev/",
	"repository": {
		"type": "git",
		"url": "https://github.com/jmhs11/anilist-comparator.git"
	},
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:no-watch": "vitest run",
		"test:ci": "vitest related",
		"coverage": "vitest run --coverage",
		"preview": "vite preview",
		"lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
		"stylelint": "npx stylelint '**/*.css' --fix",
		"format": "prettier --write .",
		"prepare": "husky install"
	},
	"dependencies": {
		"@apollo/client": "3.6.9",
		"daisyui": "2.22.0",
		"graphql": "16.6.0",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-split": "2.0.14"
	},
	"devDependencies": {
		"@testing-library/react": "13.3.0",
		"@types/react": "18.0.15",
		"@types/react-dom": "18.0.6",
		"@vitejs/plugin-react": "2.0.0",
		"@vitest/ui": "0.21.1",
		"autoprefixer": "10.4.8",
		"eslint": "8.21.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-config-standard": "17.0.0",
		"eslint-plugin-import": "2.26.0",
		"eslint-plugin-n": "15.2.4",
		"eslint-plugin-promise": "6.0.0",
		"eslint-plugin-react": "7.30.1",
		"eslint-plugin-react-hooks": "4.6.0",
		"husky": "8.0.1",
		"jsdom": "20.0.0",
		"lint-staged": "13.0.3",
		"postcss": "8.4.16",
		"prettier": "2.7.1",
		"stylelint": "14.9.1",
		"stylelint-config-prettier": "9.0.3",
		"stylelint-config-standard": "26.0.0",
		"tailwindcss": "3.1.8",
		"vite": "3.0.0",
		"vitest": "0.21.0"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,md}": "npm run lint",
		"*.css": "npm run stylelint",
		"**/*.{js,jsx,ts,tsx,json,css,scss,md}": "npm run format"
	}
}
